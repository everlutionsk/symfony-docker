#!/usr/bin/env bash

set -e

if [ "$EUID" -ne 0 ]; then
    echo "Please run as root (sudo)"
    exit
fi

if [ "${SUDO_USER}" == "root" ]; then
    echo "You need to run as sudo with regular user; not sudo su"
    exit
fi

chown -R www-data:www-data project/var/cache
chown -R www-data:www-data project/var/logs
chown -R www-data:www-data project/var/sessions
